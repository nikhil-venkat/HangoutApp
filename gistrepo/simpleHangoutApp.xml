<style>
    html { height: 100%; }
    body { margin: 0; height: 100%; position: relative; }
    /* Height / width / positioning can be customized for your use case.
       For demo purposes, we make firepad fill the entire browser. */
    #firepad-container {
      position: absolute; left: 0; top: 0; bottom: 0; right: 0;
    }
</style>


<h3>Simple Hangout App</h3>
<div id="firepad-container"></div>

<p>
<input class="button" type="button" value="Show participants!" id="showParticipants" 
    style="visibility:hidden;"
    onClick="showParticipants()"/>
</p>
<script>
function showParticipants() {
  var participants = gapi.hangout.getParticipants();

  var retVal = '<p>Participants: </p><ul>';

  for (var index in participants) {
    var participant = participants[index];

    if (!participant.person) {
      retVal += '<li>A participant not running this app</li>';
    }
    retVal += '<li>' + participant.person.displayName + '</li>';
  }

  retVal += '</ul>';

  var div = document.getElementById('participantsDiv');

  div.innerHTML = retVal;
}

function renderEditor(){
  //var editor = ace.edit("editor");
  //console.log(editor)
  //editor.setTheme("ace/theme/monokai");
  //editor.getSession().setMode("ace/mode/javascript");


  //// Initialize Firebase.
    var firepadRef = getExampleRef();
    // TODO: Replace above line with:
    // var ref = new Firebase('<YOUR FIREBASE URL>');

    //// Create ACE
    var editor = ace.edit("firepad-container");
    //editor.setTheme("ace/theme/textmate");
    var session = editor.getSession();
    session.setUseWrapMode(true);
    session.setUseWorker(false);
    //session.setMode("ace/mode/javascript");

    //// Create Firepad.
    var firepad = Firepad.fromACE(firepadRef, editor);
    
    //// Initialize contents.
    firepad.on('ready', function() {
      if (firepad.isHistoryEmpty()) {
        firepad.setText('// JavaScript Editing with Firepad!\nfunction go() {\n  var message = "Hello, world.";\n  console.log(message);\n}');
      }
    });
}

var newBroadcast = function() {
    var ref = new Firebase('https://firepad.firebaseio-demo.com');

    var hangoutID = gapi.hangout.getHangoutId();
    var firebaseID = ref.push();
    var url = 'http://ec2-54-203-38-111.us-west-2.compute.amazonaws.com:3000/broadcasts/' + hangoutID + '/' + firebaseID;

    $.ajax({
        type: 'GET',
        url: url,
        dataType: 'json',
        success: function( response ) {
            console.log( response );
        }
    });
};

var pollServer = function() {
    var hangoutID = gapi.hangout.getHangoutId();
    var url = 'http://ec2-54-203-38-111.us-west-2.compute.amazonaws.com:3000/broadcasts/'+hangoutID;
    $.getJSON( url, function( data ) {
        console.log(data);
    })
};


var loadScreenSharePrompt = function() {
    var prompt = '';

    prompt += '<div class="prompt" id="prompt">';
    prompt += '<p>Click on the screenshare link located on the left to share your screen</p>';
    prompt += '<button id="close">X</button>'
    prompt += '</div>';

    $('body').append( prompt );
    
    $('#close').on('click', function( event ) {
        var target = $(event.target);
        target.parents('#prompt').remove();
    });
};

loadScreenSharePrompt();

function init() {
  // When API is ready...                                                         
  gapi.hangout.onApiReady.add(
      function(eventObj) {

      console.log('before');
      //commenting this out
      //newBroadcast();
      console.log('after');
      setInterval(pollServer,2000);
      renderEditor();
      //VA: don't do anything right now.
        return;
        if (eventObj.isApiReady) {
          document.getElementById('showParticipants')
            .style.visibility = 'visible';
        }

        
      });
}

// Wait for gadget to load.                                                       
gadgets.util.registerOnLoadHandler(init);
</script>
